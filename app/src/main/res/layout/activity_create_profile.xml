<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProfile"
    android:background="@color/background">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/get_started2"
        android:layout_width="237dp"
        android:layout_height="86dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/roundbtn"
        android:fontFamily="@font/rockwell_bold"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterWeight"
        app:layout_constraintVertical_bias="1.0"></androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:id="@+id/textView"
        android:layout_width="410dp"
        android:layout_height="66dp"
        android:fontFamily="@font/rockwell"
        android:text="Create your profile"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="398dp"
        android:layout_height="94dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/rockwell"
        android:text="The sleep tracker will use this information to help you determine how much sleep you need"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="87dp"
        android:layout_height="37dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/rockwell"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="87dp"
        android:layout_height="37dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/rockwell"
        android:text="Age"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="87dp"
        android:layout_height="37dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/rockwell"
        android:text="Weight"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/enterName"
        android:layout_width="186dp"
        android:layout_height="36dp"
        android:layout_marginTop="56dp"
        android:background="@color/button"
        android:ems="10"
        android:fontFamily="@font/rockwell"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/enterAge"
        android:layout_width="186dp"
        android:layout_height="36dp"
        android:layout_marginTop="52dp"
        android:background="@color/button"
        android:ems="10"
        android:fontFamily="@font/rockwell"
        android:inputType="number"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/enterName" />

    <EditText
        android:id="@+id/enterWeight"
        android:layout_width="186dp"
        android:layout_height="36dp"
        android:layout_marginTop="52dp"
        android:background="@color/button"
        android:ems="10"
        android:fontFamily="@font/rockwell"
        android:inputType="number"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/enterAge" />

</androidx.constraintlayout.widget.ConstraintLayout>