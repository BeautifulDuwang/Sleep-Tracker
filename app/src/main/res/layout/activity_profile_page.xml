<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage"
    android:background="@color/background">


    <TextView
        android:id="@+id/textView18"
        android:layout_width="273dp"
        android:layout_height="45dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/rockwell_bold"
        android:text="Your Profile"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterAge"
        android:layout_width="186dp"
        android:layout_height="36dp"
        android:layout_marginTop="56dp"
        android:background="@color/button"
        android:ems="10"
        android:fontFamily="@font/rockwell"
        android:inputType="number"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/enterName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="87dp"
        android:layout_height="37dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/rockwell"
        android:text="Age"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addImage"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="44dp"
        android:background="@color/light_gray"
        android:fontFamily="@font/rockwell"
        android:onClick="setImage"
        android:text="Upload\nan\nImage..."
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18"></androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="87dp"
        android:layout_height="37dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/rockwell"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addImage" />

    <EditText
        android:id="@+id/enterName"
        android:layout_width="186dp"
        android:layout_height="36dp"
        android:layout_marginTop="56dp"
        android:background="@color/button"
        android:ems="10"
        android:fontFamily="@font/rockwell"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/addImage" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="87dp"
        android:layout_height="37dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/rockwell"
        android:text="Weight"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/enterWeight"
        android:layout_width="186dp"
        android:layout_height="36dp"
        android:layout_marginTop="48dp"
        android:background="@color/button"
        android:ems="10"
        android:fontFamily="@font/rockwell"
        android:inputType="number"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/enterAge" />

</androidx.constraintlayout.widget.ConstraintLayout>